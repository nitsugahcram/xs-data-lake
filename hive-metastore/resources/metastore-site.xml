<configuration>
    <property>
        <name>fs.s3a.access.key</name>
        <value>${env.S3_ACCESS_KEY}</value>
    </property>
    <property>
        <name>fs.s3a.secret.key</name>
        <value>${env.S3_SECRET_KEY}</value>
    </property>
    <property>
        <name>fs.s3a.connection.ssl.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>fs.s3a.path.style.access</name>
        <value>${env.S3_PATH_STYLE_ACCESS}</value>
    </property>
    <property>
        <name>fs.s3a.endpoint</name>
        <value>${env.S3_ENDPOINT}</value>
    </property>
    <property>
        <name>fs.s3a.endpoint.region</name>
        <value>${env.S3_ENDPOINT_REGION}</value>
    </property>
    <property>
        <name>fs.s3a.bucket.dataproduct.endpoint</name>
        <value>${env.S3_DATA_PRODUCT_ENDPOINT}</value>
    </property>
    <property>
        <name>fs.s3a.bucket.dataproduct.access.key</name>
        <value>${env.S3_DATA_PRODUCT_ACCESS_KEY}</value>
    </property>
    <property>
        <name>fs.s3a.bucket.dataproduct.secret.key</name>
        <value>${env.S3_DATA_PRODUCT_SECRET_KEY}</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>${env.HIVE_METASTORE_JDBC_URL}?createDatabaseIfNotExist=true</value>
        <description>JDBC connect string for a JDBC metastore</description>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>${env.HIVE_METASTORE_DRIVER}</value>
        <description>Driver class name for a JDBC metastore</description>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>${env.HIVE_METASTORE_USER}</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>${env.HIVE_METASTORE_PASSWORD}</value>
    </property>
    <property>
        <name>javax.jdo.option.DetachAllOnCommit</name>
        <value>true</value>
    </property>
    <property>
        <name>javax.jdo.option.Multithreaded</name>
        <value>true</value>
    </property>
    <!-- <property>
        <name>datanucleus.connectionPool.maxPoolSize</name>
        <value>${env.HIVE_METASTORE_MAX_POOL_SIZE}</value>
    </property> -->
    <property>
        <name>hive.metastore.event.db.notification.api.auth</name>
        <value>false</value>
    </property>
    <property>
        <name>metastore.thrift.uris</name>
        <value>thrift://${env.HIVE_METASTORE_URI}:9083</value>
        <description>Thrift URI for the remote metastore. Used by metastore client to connect to remote metastore.</description>
    </property>
    <property>
        <name>metastore.task.threads.always</name>
        <value>org.apache.hadoop.hive.metastore.events.EventCleanerTask</value>
    </property>
    <property>
        <name>metastore.expression.proxy</name>
        <value>org.apache.hadoop.hive.metastore.DefaultPartitionExpressionProxy</value>
    </property>
    <property>
        <name>metastore.warehouse.dir</name>
        <value>/user/hive/warehouse</value>
    </property>
    <property>
        <name>hive.metastore.server.tcp.keepalive</name>
        <value>true</value>
    </property>
    <property>
        <name>hive.metastore.connect.retries</name>
        <value>5</value>
    </property>
    <property>
        <name>hive.metastore.client.connect.retry.delay</name>
        <value>30</value>
    </property>
    <property>
        <name>hive.metastore.metrics.enabled</name>
        <value>true</value>
    </property>
</configuration>